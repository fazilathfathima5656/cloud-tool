{
    "name": "@toolbox/toolbox-core",
    "version": "1.0.0",
    "description": "Core functionality of toolbox",
    "main": "dist/src/index",
    "types": "dist/src/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "npm run watch",
        "tslint": "tslint -p tsconfig.json -c tslint.json",
        "watch": "tsc --watch",
        "test": "jest"
    },
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@types/cron": "^1.7.1",
        "@types/crypto-js": "^3.1.43",
        "@types/express": "^4.17.6",
        "@types/jest": "^25.2.1",
        "@types/lodash.get": "^4.4.6",
        "@types/mime-types": "^2.1.0",
        "@types/node": "^14.0.27",
        "@types/request-promise-native": "~1.0.15",
        "jest": "^24.9.0",
        "source-map-support": "^0.5.9",
        "ts-jest": "^25.4.0",
        "tslint": "^6.1.2",
        "typescript": "~3.7.4"
    },
    "dependencies": {
        "client-oauth2": "^4.2.5",
        "cron": "^1.7.2",
        "crypto-js": "3.1.9-1",
        "file-type": "^14.6.2",
        "lodash.get": "^4.4.2",
        "mime-types": "^2.1.27",
        "@toolbox/toolbox-workflow": "1.0.0",
        "p-cancelable": "^2.0.0",
        "request": "^2.88.2",
        "request-promise-native": "^1.0.7"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testURL": "http://localhost/",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "node"
        ]
    }
}
